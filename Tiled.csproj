  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.303" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.1.303" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="classes\core\Networking\" />
    <Folder Include="classes\core\UI\Widgets\" />
    <Folder Include="classes\core\UI\UserWidgets\" />
  </ItemGroup>
  <ItemGroup>
